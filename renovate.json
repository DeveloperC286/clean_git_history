{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "fileMatch": [
        "(^|/)Earthfile$",
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile[^/]*$"
      ]
    }
  ]
}
